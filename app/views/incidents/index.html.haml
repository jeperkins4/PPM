.page-header
  %h1 
    Incidents
    .pull-right
      = link_to 'Add', new_incident_path, :class => 'btn btn-primary'

%table#incidents.table.table-bordered.table-striped.dataTable{:data => {:source => incidents_url(format: 'json') }}
  %thead
    %tr
      %th Mins
      %th Incident Date
      %th Days Open
      %th Incident Type
      %th Contract Manager Notified 
      %th Action Type
      %th
  %tfoot
    %tr
      %th
        = text_field_tag(:mins, nil, :class => 'search_init span1')
      %th
        = text_field_tag(:incident_on, nil, :class => 'search_init span2')
      %th
        = text_field_tag(:days_open, nil, :class => 'search_init span2')
      %th
        = text_field_tag(:incident_type, nil, :class => 'search_init span2')
      %th
        = text_field_tag(:notified, nil, :class => 'search_init span2')
      %th
        = text_field_tag(:action_type_name, nil, :class => 'search_init span2')
      %th
  %tbody
