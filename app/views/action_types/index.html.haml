.page-header
  %h1 
    Action Types
    .pull-right
      = link_to 'Add', new_action_type_path, :class => 'btn btn-primary'

%table#action_types.table.table-bordered.table-striped.dataTable
  %tr
    %th Name
    %th Description
    %th

  - @action_types.each do |action_type|
    %tr
      %td= link_to action_type.name, action_type
      %td= action_type.description
      %td
        = link_to 'Edit', edit_action_type_path(action_type), :class => 'btn'
        = link_to 'Destroy', action_type, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger'

