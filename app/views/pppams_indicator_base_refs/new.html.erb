<h1>New <%= t(:pppams_indicator_base_ref)%></h1>

<% form_for(@pppams_indicator_base_ref) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :question %><br />
    <%= f.text_area :question %>
  </p>
  <p>
    Date Inactive
    <br />
    <%= f.date_select :inactive_on, {:include_blank => true}%>
  </p>
  <p>
    Global Category<br />
    <%= select :pppams_indicator_base_ref, :pppams_category_base_ref_id, @pppams_category_base_refs, {:include_blank => true } %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', pppams_indicator_base_refs_path %>
