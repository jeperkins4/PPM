%html.no-js{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  <!--<![endif]-->
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
    %meta{'name' => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %meta{'name' => 'author', :content => 'Department of Management Services'}
    %meta{'name' => 'copyright', :content => 'Department of Management Services'}
    %meta{'name' => 'description', :content => 'The administrative arm of the State of Florida government'}
    %meta{'name' => 'MSSmartTagsPreventParsing', :content => 'TRUE'}
    %title= "Bureau of Private Prison Monitoring - DMS | #{controller.action_name.capitalize} #{controller.controller_name.capitalize}"
    = csrf_meta_tag
    = stylesheet_link_tag 'application'
    - if Rails.env == 'test'
      = javascript_include_tag 'jquery.focus.test-fix'
    = javascript_include_tag :application
    = yield :javascript
    :javascript
      $(function() {
        //$("#tabs").tabs();
        $("#user_email").focus();
      });
    = yield :head
  %body
    = render 'shared/navbar'
    .container
      - unless flash.empty?
        - flash.each do |name, msg|
          %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
            %a.close{'data' => {:dismiss => 'alert'}} &#215;
            = content_tag :div, msg, :id => "flash_#{name}", :class => 'flash' if msg.is_a?(String)
      .dms-unit
        = yield
        %footer.footer
          Copyright #{Date.today.year}
