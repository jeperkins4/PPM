<h1>Showing Global Indicator </h1>
<p>
  <b>Question:</b>
</p>
<p>
  <%=h @pppams_indicator_base_ref.question %>
</p>

<p>
  <b>Global Category:</b>
</p>
<p>
  <%=h @pppams_indicator_base_ref.pppams_category_base_ref %>
</p>
<table>
  <thead>
    <tr>
      <th>Facility</th>
      <th>Status</th>
      <th>Added to facility on</th>
      <th>Becomes inactive on</th>
    </tr>
  </thead>
  <tbody>
    <% @facilities.each do |facility_id, facility| %>
        <tr>
          <td><%= indicator_link(facility)%></td>
          <td><%= facility[:active] ? 'Active' : 'Inactive' %></td>
          <td><%= facility[:active_on] %></td>
          <td><%= facility[:inactive_on] %></td>
        </tr>
     <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_pppams_indicator_base_ref_path(@pppams_indicator_base_ref) %> |
<%= link_to 'Back to Global Category', pppams_category_base_ref_path(@pppams_indicator_base_ref.pppams_category_base_ref_id) %>
