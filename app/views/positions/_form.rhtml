	<p>
			<b>Facility: </b><br />
			<% if session[:access_level] != 'Administrator' -%>
				<%= f.text_field :facility_id, :value => session[:facility].id, :style => 'display:none;' %>
				<%= session[:facility].facility %>
			<% else -%>
				<%= f.select("facility_id", Facility.find(:all).collect {|fa| [ fa.facility, fa.id ] }, { :include_blank => false })%>
			<% end -%>

  <p>
  	
  <p>
	  <b>Position type</b><br />
	  <%= f.select("position_type_id", PositionType.find(:all).collect {|pt| [ pt.position_type, pt.id ] }, { :include_blank => true })%>
  </p>
  
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>
  
   <p>
    <b>Description</b><br />
    <%= f.text_area :description, :cols => 45, :rows => 3 %>    
  </p>
      
  <p>
    <b>Salary</b><br />
    <%= f.text_field :salary %>
  </p>


    <%= submit_tag "Save" %>
  </p>
