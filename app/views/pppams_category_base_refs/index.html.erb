<h1>Listing <%= t(:pppams_category_base_ref).pluralize%></h1>

<table>
  <tr>
    <th colspan="3">Actions</th>
    <th>Name</th>
    <th>Pppams category group</th>
  </tr>

<% @pppams_category_base_refs.each do |pppams_category_base_ref| %>
  <tr>
    <td><%= link_to image_tag("view_icon.png", :border=>0, :title=>'Show this overall category') , pppams_category_base_ref %></td>
    <td><%= link_to image_tag("edit_icon.png", :border=>0, :title=>"Edit this overall category"), edit_pppams_category_base_ref_path(pppams_category_base_ref) %></td>
    <td><%= link_to image_tag("delete_icon.png", :border=>0, :title=>"Delete this overall_category"), pppams_category_base_ref, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%=h pppams_category_base_ref.name %></td>
    <td><%=h pppams_category_base_ref.pppams_category_group_id %></td>
  </tr>
<% end %>
</table>

<br />

