<p>
  <b>Complaint Number:</b>
  <%=h @complaint.complaint_number %>
</p>

<p>
  <b>Complaint Date:</b>
  <%=h @complaint.complaint_date %>
</p>

<p>
  <b>Date Received:</b>
  <%=h @complaint.received_date %>
</p>

<p>
  <b>Type of Complaint:</b>
  <%=h @complaint.complaint_type %>
</p>

<p>
  <b>Staff Receiving Complaint:</b>
  <%=h @complaint.user.firstname + ' ' +  @complaint.user.lastname %>
</p>

<p>
  <b>Date Logged:</b>
  <%=h @complaint.created_on %>
</p>


<p>
  <b>Date Assigned to MRS:</b>
  <%=h @complaint.MRS_assigned_date %>
</p>

<p>
  <b>Date Assigned to CM:</b>
  <%=h @complaint.CM_assigned_date %>
</p>

<p>
  <b>Date Response Due from CM:</b>
  <%=h @complaint.CM_response_due_date %>
</p>

<p>
  <b>Date Response Received from CM:</b>
  <%=h @complaint.CM_response_date %>
</p>

<p>
  <b>Date Response Sent to Complainant:</b>
  <%=h @complaint.response_sent_date %>
</p>

<p>
  <b>Date Complaint Closed:</b>
  <%=h @complaint.resolved_date %>
</p>

<p>
  <b>Description of Complaint:</b>
  <%=h @complaint.description %>
</p>

<p>
  <b>Complainant's Name & Contact Information:</b>
  <%=h @complaint.complainer_contact %>
</p>

<p>
  <b>Inmate's Name and DC Number:</b>
  <%=h @complaint.inmate_details %>
</p>


<%= link_to 'Edit', edit_complaint_path(@complaint) %> |
<%= link_to 'Back', :action => '' %>

<br />
<br />


<fieldset>
<legend>Complaint Follow Ups</legend>	
<% @complaint_follow_ups.each do |complaint_follow_up| -%>
 
    <b><%=h complaint_follow_up.created_on %></b><br />
    <p><%=h complaint_follow_up.follow_up %>&nbsp;<%= link_to 'View', complaint_follow_up_path(@complaint, complaint_follow_up) %>&nbsp;<%= link_to 'Delete', destroy_complaint_follow_up_path(@complaint, complaint_follow_up) %></p>

 <hr> 
<% end -%>
</fieldset>
<p>
    <%= link_to 'Add Follow Up', new_complaint_follow_up_path(@complaint)  %>
</p>
