.page-header
  %h1 
    Listing Incident Classes
    .pull-right
      = link_to 'New Incident class', new_incident_class_path

%table#incident_classes.table.table-striped.table-bordered.dataTable
  %tr
    %th Name
    %th Description
    %th
    %th
    %th

  - @incident_classes.each do |incident_class|
    %tr
      %td= incident_class.name
      %td= incident_class.description
      %td= link_to 'Show', incident_class
      %td= link_to 'Edit', edit_incident_class_path(incident_class)
      %td= link_to 'Destroy', incident_class, :confirm => 'Are you sure?', :method => :delete

